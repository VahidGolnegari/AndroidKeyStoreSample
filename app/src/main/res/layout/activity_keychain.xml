<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_keychain_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_keychain_export"
        android:layout_marginTop="20dp"
        android:onClick="createCert"/>

    <Button
        android:id="@+id/button_keychain_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export"
        android:onClick="importCert"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/button_keychain_create"
        app:layout_constraintRight_toLeftOf="@id/button_keychain_create"
        app:layout_constraintLeft_toRightOf="@id/button_keychain_import"
        />

    <Button
        android:id="@+id/button_keychain_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import"
        android:onClick="importCert"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/button_keychain_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_keychain_export"/>

</androidx.constraintlayout.widget.ConstraintLayout>